<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
  <id>org.firstinspires.ftc.plugins.androidstudio</id>
  <name>FTC Android Studio plugin</name>
  <version>0.0.51</version>
  <vendor email="bob@theatkinsons.org" url="http://www.github.com/ftctechnh/ftc_app">
    Pedro Vicente Gomez Sanchez
  </vendor>

  <description><![CDATA[
      FTC Android Studio Plugin
    ]]>
  </description>

  <change-notes><![CDATA[
      0.0.0: Initial version.<br>
    ]]>
  </change-notes>

  <idea-version since-build="162"/>

  <extensions defaultExtensionNs="com.intellij">

    <defaultProjectTypeProvider type="Android"/>

      <toolWindow id="Android WiFi ADB"
              icon="/icons/androidWiFiADBIcon.png"
              anchor="right"
              factoryClass="com.github.pedrovgs.androidwifiadb.window.AndroidWiFiADBWindow">
      </toolWindow>

  </extensions>

  <application-components>

  </application-components>

  <project-components>
    <component>
      <interface-class>org.firstinspires.ftc.plugins.androidstudio.ui.FtcProjectComponent</interface-class>
      <implementation-class>org.firstinspires.ftc.plugins.androidstudio.ui.FtcProjectComponentImpl</implementation-class>
    </component>
  </project-components>

  <depends>org.jetbrains.android</depends>

  <!-- http://www.jetbrains.org/intellij/sdk/docs/tutorials/action_system/grouping_action.html -->
  <actions>

    <action id="AndroidWiFiADB"
        class="com.github.pedrovgs.androidwifiadb.action.AndroidWiFiADBAction"
        text="AndroidWiFiADB"
        description="Connects your Android devices to your computer over TCP just with one click."
        icon="/icons/androidWiFiADBIcon.png"
        project-type="Android"
        >
      <add-to-group group-id="MainToolBar" anchor="last"/>
      <add-to-group group-id="NavBarToolBar" anchor="first"/>
    </action>

    <action class="org.firstinspires.ftc.plugins.androidstudio.ui.HelloAction" id="FtcSayHello" text="FTC Android Plugin Hello">
      <add-to-group group-id="ToolsMenu"/>
      <add-to-group group-id="WelcomeScreen.QuickStart"/>
    </action>

  </actions>


</idea-plugin>
